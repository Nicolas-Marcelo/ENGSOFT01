#include <iostream>
using namespace std;


int main () {


    double valor_quarto_grande = 100;
    double valor_quarto_pequeno = 150;
    double taxa_imposto = 0.06;
    double pequenos;
    double grandes;


    cout << "Servicos de limpeza de carpetes Frank" << endl;
    cout << "O valor da limpeza do quarto grande eh 150 reais, e o valor do quarto pequeno eh 100 reais" << endl;


    cout << "Digite a quantidade de quartos grandes a serem limpos: " << endl;
    cin >> grandes;


    cout << "Digite a quantidade de quartos pequenos a serem limpos: " << endl;
    cin >> pequenos;


    double valor_total_grandes{0};
    valor_total_grandes = valor_quarto_grande*grandes;
    double valor_total_pequenos{0};
    valor_total_pequenos = valor_quarto_pequeno*pequenos;
    double valor_total{0};
    valor_total = valor_total_grandes+valor_total_pequenos;
    double valor_com_taxa{0};
    valor_com_taxa = valor_total*taxa_imposto;
    double valor_tudo_de_tudo;
    valor_tudo_de_tudo = valor_com_taxa+valor_total;


    cout << "O valor total do pedido para limpeza eh de " << valor_tudo_de_tudo << " reias " << endl;
    return 0;
}
